{% set isInLabCollection = ancestry.self | evaluate(isBaseLabCollection) %}
{% set baseAncestor = ancestry %}
{% if isInLabCollection %}
	{% set baseAncestor = ancestry.firstChild.ancestry %}
{% endif %}
{% for item in baseAncestor.parent.ancestry.members %}
	<section class="dtw-sidebar-section">
		<div class="dtw-title">
			{% if item.path === path %}
				<span class="dtw-current">{{ item.title }}</span>
			{% else %}
				<a href="{{ '/' ~ item.path }}">{{ item.title }}</a>
			{% endif %}
		</div>
	</section>
{% endfor %}
{% for collection, items in baseAncestor.siblings | groupby(getLabCollection) %}
	<section class="dtw-sidebar-section">
		<div class="dtw-title">{{ collection }}</div>
		{% set itemsInCollection = items[0].ancestry.members %}
		{% for item in itemsInCollection | sort (false, false, 'title') %}
			<div class="dtw-sidebar-entry">
				{% if item.path === path %}
					<span class="dtw-current">{{ item.title }}</span>
				{% else %}
					<a href="{{ '/' ~ item.path }}">{{ item.title }}</a>
				{% endif %}
			</div>
		{% endfor %}
	</section>
{% endfor %}
