<nav>
	<div class="dtw-left-navigation">
		{% for item in navigation | rejectattr("hidden") | selectattr("left") %}
			<a {% if item.bold %}class="dtw-bold-navigation"{% endif %} href="{{ item.link }}">
				{% if item.icon %}<i class="fa fa-{{ item.icon }}"></i>{% endif %}
				{{ item.title }}
			</a>
		{% endfor %}
	</div>
	<div class="dtw-right-navigation">
		{% for item in navigation | rejectattr("hidden") | rejectattr("left") %}
			<a {% if item.bold %}class="dtw-bold-navigation"{% endif %} href="{{ item.link }}">
				{% if item.icon %}<i class="fa fa-{{ item.icon }}"></i>{% endif %}
				{{ item.title }}
			</a>
		{% endfor %}
	</div>
</nav>
