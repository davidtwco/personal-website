{% extends "layouts/base.njk" %}

{% block title %}{{ site.title }}{% endblock %}
{% block body %}
	<div class="container dtw-homepage">
		{% include "includes/navigation.njk" %}
		<div class="dtw-introduction">
			<h4 class="dtw-type">{{ subtitle }}</h4>
			<h1 class="dtw-title">{{ title }}</h1>
			<div class="dtw-description">{{ contents | safe }}</div>
		</div>
		<nav class="dtw-homepage-links">
			<ul class="list-unstyled list-inline dtw-left-navigation">
				{% for link in links %}
					<li class="list-inline-item">
						<a href="{{ link.link }}">
							<i class="fa fa-{{ link.icon }}"></i> {{ link.name }}
						</a>
					</li>
				{% endfor %}
			</ul>
			{% if site.showNetlifyNotice %}
				<ul class="list-unstyled list-inline dtw-right-navigation">
					<li class="list-inline-item">
						<a class="dtw-netlify-notice" href="https://netlify.com">Hosted by Netlify</a>
					</li>
				</ul>
			{% endif %}
		</nav>
	</div>
{% endblock %}
