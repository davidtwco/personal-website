{% extends "layouts/navigation.njk" %}

{% block content %}
	{% include "includes/section_introduction.njk" %}
	<div class="row dtw-projects">
		{% for project in projects | sort(true, false, 'startDate') %}
			<article class="col-12 col-md-6 dtw-project-listing">
				{% if project.cover %}
					<img class="img-fluid dtw-cover" src="{{ '/images/' ~ project.cover }}"></img>
				{% endif %}
				<h5 class="dtw-type">{{ project.type }}</h5>
				<h1 class="dtw-title">{{ project.title }}</h1>
				<h5 class="dtw-subtitle">
					<span>{{ project.startDate | date("MMMM YYYY") }}</span>{% if project.endDate %} - <span>{{ project.endDate | date("MMMM YYYY") }}{% endif %}</span>
				</h5>
				<div class="dtw-description">{{ project.content | safe }}</div>
				<ul class="list-unstyled list-inline">
					{% if project.sourceLink %}
						<li class="list-inline-item"><a class="dtw-{{ project.color }}" href="{{ project.sourceLink }}">View Source</a></li>
					{% endif %}
					{% if project.visitLink %}
						<li class="list-inline-item"><a class="dtw-{{ project.color }}" href="{{ project.visitLink }}">Visit Website</a></li>
					{% endif %}
				</ul>
			</article>
		{% else %}
			<div class="col-12 dtw-no-entries">
				<p>There aren't any projects here just now, check back later.</p>
			</div>
		{% endfor %}
	</div>
{% endblock %}
