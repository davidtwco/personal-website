{% extends "layouts/navigation.njk" %}

{% block content %}
	{% include "includes/section_introduction.njk" %}
	<div class="row">
		{% for item in writings | sort(true, false, 'date') %}
			<article class="col-12 dtw-writing-listing">
				<a href="{{ '/' ~ item.path }}">
					<h1 class="dtw-title">{{ item.title }}</h1>
					<h4 class="dtw-subtitle">
						Written on <span>{{ item.date | date }}</span>, with <span>{{ item.wordCount }}</span> words (approx reading time of <span>{{ item.readingTime }}</span>).
					</h4>
				</a>
			</article>
		{% else %}
			<div class="col-12 dtw-no-entries">
				<p>There aren't any writings just now, check back later.</p>
			</div>
		{% endfor %}
	</div>
{% endblock %}
